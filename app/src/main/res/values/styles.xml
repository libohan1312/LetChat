<resources xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/black_light</item>
        <item name="colorPrimaryDark">@color/black_dark</item>
        <item name="colorAccent">@color/colorPrimaryDark</item>
    </style>

    <style name="AppTheme.NoActionBar" >
        <!--<item name="android:windowActionBar">false</item>-->
        <!--<item name="android:windowNoTitle">true</item>-->
    </style>

    <style name="tabtextstyle" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">10dp</item>
    </style>

    <style name="mytoolbar" parent="ThemeOverlay.AppCompat.Light">
        <item name="titleTextColor">@color/white</item>
        <item name="android:background">?attr/colorPrimary</item>
        <item name="actionMenuTextColor">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
    </style>
</resources>
